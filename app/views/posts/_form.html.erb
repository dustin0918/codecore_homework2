<div class="new">
<% if @post.errors.any?%>
<h2>the following errors prevented the post from getting created</h2>
<ul>
  <% @post.errors.full_messages.each do |msg| %>
  <li><%=msg%></li>
  <%end%>
</ul>
<% end%>
<%=form_for @post do |f| %>
  <p>
  <div class="text-input"
    <%=f.label :title %><br/>
    <%=f.text_field :title%>
  </p>
  <p>
    <%= f.label :body %> <br/>
    <%= f.text_area :body %>
  </p>
  </div>
  <p>
    <%= f.submit%>
  </p>
<%end%>

</div>
